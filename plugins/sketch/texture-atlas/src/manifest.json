{
  "$schema": "https://raw.githubusercontent.com/sketch-hq/SketchAPI/develop/docs/sketch-plugin-manifest-schema.json",
  "icon": "icon.png",
  "name": "Texture atlas",
  "description": "A plugin to arrange layers to create a texture atlas, then export the layer positions to a JSON file",
  "author": "Crescent Flare Tools",
  "authorEmail": "info@crescentflare.com",
  "homepage": "https://github.com/crescentflare/Tools",
  "commands": [
    {
      "name": "Arrange (tightly packed)",
      "identifier": "texture-atlas.tightly-packed-identifier",
      "script": "./packtight.js"
    },
    {
      "name": "Arrange (1 pixel spacing)",
      "identifier": "texture-atlas.pixel-spacing-identifier",
      "script": "./packspaced.js"
    },
    {
      "name": "Arrange (tightly packed - 3x)",
      "identifier": "texture-atlas.tightly-packed-3x-identifier",
      "script": "./packtight3x.js"
    },
    {
      "name": "Arrange (1 pixel spacing - 3x)",
      "identifier": "texture-atlas.pixel-spacing-3x-identifier",
      "script": "./packspaced3x.js"
    },
    {
      "name": "Save entries (JSON)",
      "identifier": "texture-atlas.save-entries-json-identifier",
      "script": "./saveentriesjson.js"
    },
    {
      "name": "Save entries (C# Unity)",
      "identifier": "texture-atlas.save-entries-cs-identifier",
      "script": "./saveentriescs.js"
    }
  ],
  "menu": {
    "title": "Texture atlas",
    "items": [
      "texture-atlas.tightly-packed-identifier",
      "texture-atlas.pixel-spacing-identifier",
      "texture-atlas.tightly-packed-3x-identifier",
      "texture-atlas.pixel-spacing-3x-identifier",
      "texture-atlas.save-entries-json-identifier",
      "texture-atlas.save-entries-cs-identifier"
    ]
  }
}